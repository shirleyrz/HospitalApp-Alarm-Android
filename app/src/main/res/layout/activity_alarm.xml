<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sbu.mad.ColonoscopyPrep.AlarmActivity">

    <!--Button Change Date-->
    <Button
        android:id="@+id/btnChangeDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Date" />

    <!--Baseline Tag for Current Date-->
    <TextView
        android:id="@+id/lblDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm Date : "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/btnChangeDate"
        android:layout_alignLeft="@+id/btnChangeDate"
        android:layout_alignParentStart="false" />

    <!--Text View for Current Date-->
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_toRightOf="@+id/lblDate"
        android:layout_alignTop="@+id/lblDate"
        android:layout_alignBottom="@+id/lblDate"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <!--Button for Count Down-->
    <Button
        android:id="@+id/btnCountDown"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Count Down Now!"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--Text View for Time Left-->
    <TextView
        android:id="@+id/tvTimeLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnCountDown"
        android:layout_alignLeft="@+id/btnCountDown"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <Button
        android:id="@+id/btnChangeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btnChangeDate"
        android:layout_alignTop="@id/btnChangeDate"
        android:layout_alignBottom="@id/btnChangeDate"
        android:text="Set Time" />

    <TextView
        android:id="@+id/lblTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm Time : "
        android:layout_below="@+id/lblDate"
        android:layout_alignLeft="@+id/lblDate"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_toRightOf="@id/lblTime"
        android:layout_alignTop="@id/lblTime"
        android:layout_alignBottom="@id/lblTime"
        android:textAppearance="?android:attr/textAppearanceLarge" />


</RelativeLayout>
